<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title><%= title %></title>
	 <%- include ../include/head%>
</head>
<body>
	
	<table class="table table-bordered">
	<thead>
	<th class="col-md-2">登录名</th>
	<th class="col-md-2">密码</th>
	<th class="col-md-2">姓名</th>
	<th class="col-md-2">团队</th>
	<th class="col-md-2">职位</th>
	<th class="col-md-2">操作</th>
	</thead>
	<tbody >
	<% users.forEach(function(user){ %>  
	<tr >
	<td class="col-md-2"><%= user.login_name %></td>
	<td class="col-md-2"><%= user.password %></td>
	<td class="col-md-2"><%= user.name %></td>
	<td class="col-md-2"><%= user.team %></td>
	<td class="col-md-2"><%= user.job %></td>
	<td class="col-md-2"><a href='/delete/<%= user.id %>'  class='btn btn-primary'>删除</a><a href='/update/<%= user.id %>'  class='btn btn-primary'>修改</a></td>
	</tr> 
	<% }) %>  
	</tbody>
	</table>
 	<a href='/create'  class='btn btn-primary'>增加帐号</a>
	

 <div class="modal fade" id="modal-editor">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1> Editor</h1>
        </div>
        <div class="modal-body">
         <form method='post' action='/update'  class="form-horizontal"  style="width: 1000px;    padding-left: 20px;">
		<input name='id' class='xlarge' value='<%= user.id %>' style="display:none">
			<div class="form-group ">
			 <div class="input-group col-sm-4">
			 <div class="input-group-addon">登录名</div>
			<input name='login_name' class='form-control' value='<%= user.login_name %>'>
			</div></div>
			<div class="form-group">
			 <div class="input-group col-sm-4">
			 <div class="input-group-addon">密码</div>
			<input name='password' class='form-control' value='<%= user.password %>'>
			</div></div>
			<div class="form-group">
			 <div class="input-group col-sm-4">
			 <div class="input-group-addon">姓名</div>
			<input name='name' class='form-control' value='<%= user.name %>'>
			</div></div>
			<div class="form-group">
			 <div class="input-group col-sm-4">
			 <div class="input-group-addon">团队</div>
			<input name='team' class='form-control' value='<%= user.team %>'>
			</div></div>
			<div class="form-group">
			 <div class="input-group col-sm-4">
			 <div class="input-group-addon">职位</div>
			<input name='job' class='form-control' value='<%= user.job %>'>
			</div></div>
			
			<input type='submit' value='保存' class='btn btn-primary'>
			<button type='reset' class='btn'>取消</button>
			
		</form>
   
  	 <form method='post' action='/create'  class="form-horizontal"  style="width: 1000px;    padding-left: 20px;">
			<div class="form-group ">
			 <div class="input-group col-sm-4">
			 <div class="input-group-addon">登录名</div>
			<input name='login_name' class='form-control' >
			</div></div>
			<div class="form-group">
			 <div class="input-group  col-sm-4">
			 <div class="input-group-addon">密码</div>
			<input name='password' class='form-control' >
			</div></div>
			<div class="form-group">
			 <div class="input-group  col-sm-4">
			 <div class="input-group-addon">姓名</div>
			<input name='name' class='form-control' >
			</div></div>
			<div class="form-group">
			 <div class="input-group  col-sm-4">
			 <div class="input-group-addon">团队</div>
			<input name='team' class='form-control' >
			</div></div>
			<div class="form-group">
			 <div class="input-group  col-sm-4">
			 <div class="input-group-addon">职位</div>
			<input name='job' class='form-control' >
			</div></div>
			
			<input type='submit' value='保存' class='btn btn-primary'>
			<button type='reset' class='btn'>取消</button>
			
		</form>
        </div>
      </div>
    </div>
  </div>
</body>
</html>